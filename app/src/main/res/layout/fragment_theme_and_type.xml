<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.ThemeAndTypeFragment">

    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/relativeThemeAndType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitleTheme"
            android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvViewMoreThemeAndType"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:text="Xem thêm"
            android:textColor="#913667"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeThemeAndType"
        android:scrollbars="none" />

</RelativeLayout>