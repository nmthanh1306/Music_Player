<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background_song_player"
    tools:context=".activity.SongPlayerActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarSongPlayer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerSongPlayer"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="00:00"
                android:id="@+id/tvTimeSong"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/seekBarTimeSong"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTotalTimeSong"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButtonShuffle"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconsuffle"
                android:layout_marginRight="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/imageButtonPre"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconpreview"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageButton
                android:id="@+id/imageButtonPlay"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconplay"
                android:layout_marginRight="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <ImageButton
                android:id="@+id/imageButtonNext"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconnext"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageButton
                android:id="@+id/imageButtonRepeat"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/iconrepeat"
                android:layout_marginRight="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>