<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivBackgroundPlaylist"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>

    <ImageView
        android:id="@+id/imageViewPlaylist"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@id/ivBackgroundPlaylist"
        android:scaleType="fitXY"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tvPlaylistName"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@id/imageViewPlaylist"
        android:layout_alignBottom="@id/imageViewPlaylist"
        android:text="All play list"
        android:textSize="13sp"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>